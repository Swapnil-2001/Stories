<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
{{#if stories}}
  <p>Here are your stories</p>
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/{{_id}}">{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You haven't created any stories</p>
{{/if}}
